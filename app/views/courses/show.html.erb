<h1> Assignments for <%= @course.title %> </h1>

<table class="table table-striped">
  <tr>
    <th> Assignment Name </th>
    <th> Assignment Grade </th>
    <th> Edit </th>
    <th> Destroy </th>
  </tr>
  <%= link_to "Add assignment" , new_course_assignment_path(@course) %>
  <% @course.assignments.each do |x| %>
    <tr>
      <td><%= x.name %> </td>
      <td><%= x.grade %> </td>
      <td><%= link_to "Edit" , edit_course_assignment_path(x.course_id,x.id) %> </td>
      <td><%= link_to "Delete" , course_assignment_path(x.course_id,x.id) , :method => :delete, :confirm => "Are you sure you want to delete this assignment?"  %>
    </tr>
  <% end %>
</table>
